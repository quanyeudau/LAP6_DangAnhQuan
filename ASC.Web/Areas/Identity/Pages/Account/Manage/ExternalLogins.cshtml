@page
@model ASC.Web.Areas.Identity.Pages.Account.ExternalLoginModel
@{
    ViewData["Title"] = "External Login";
}

<h2>@Model.ProviderDisplayName</h2>
<h3>@ViewData["Title"]</h3>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<p>
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter your email below and click the Register button to finish logging in.
</p>

<form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" readonly />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
